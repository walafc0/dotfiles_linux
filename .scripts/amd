#/bin/bash

MTERM=urxvt

if [ $1 = "a" ]; then
  AMD=$(cat ~/.ssh/config | grep -A2 amda | grep Hostname | awk '{print $2}')
else
  AMD=$(cat ~/.ssh/config | grep -A2 amdb | grep Hostname | awk '{print $2}')
fi

if [ -z $DISPLAY ]; then
  ssh -l py $AMD
else
  if [ "$2" = "fac" ]; then
    $MTERM -e ssh -X gateway -t ssh -X -l py $AMD &
  else
    $MTERM -e ssh -X -l py $AMD &
  fi
fi

exit 0
